<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="ClmusicBean" class="by.Yandr2022.springlearn.ClassicalMusic">
    </bean>
    <bean id="RmusicBean" class="by.Yandr2022.springlearn.RockMusic">
    </bean>
    <bean id="PmusicBean" class="by.Yandr2022.springlearn.PopMusic">
    </bean>

    <bean id="musicPlayer" class="by.Yandr2022.springlearn.MusicPlayer">
        <!--        <constructor-arg ref="musicBean"/>-->
        <property name="musicList">
            <list>
                <ref bean="ClmusicBean"/>
                <ref bean="RmusicBean"/>
                <ref bean="PmusicBean"/>
            </list>
        </property>
        <property name="volume" value="${musicPlayer.volume}"/>
        <property name="name" value="${musicPlayer.name}"/>
    </bean>

</beans>